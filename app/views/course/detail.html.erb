<div class="container">
  <div class="panel panel-success">
    <div class="panel-heading"><%= @result.title %></div>
    <div class="panel-body">
      <% @result.info.split(/\n/).each do |memo| %>
        <p><%= memo %><p>
      <% end %>
    </div>
    <!-- List group -->
    <ul class="list-group">
      <li class="list-group-item">科目番号: <%= @result.code %></li>
      <li class="list-group-item">開設学期: <%= @result.terms %></li>
      <li class="list-group-item">曜日時限: <%= @result.daytimes %></li>
      <li class="list-group-item">担当教員: <%= @result.instructors %></li>
      <li class="list-group-item">授業教室: <%= @result.location %></li>
    </ul>
  </div>

  <a href="https://twitter.com/share" class="twitter-share-button" data-via="himkt">Tweet</a>
  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
</div>
